{
  "name": "monorepo-project",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:front": "npm start --prefix front-app",

    "start:auth-prod": "npm run start --prefix auth-service",
    "start:auth-dev": "npm run start:dev  --prefix auth-service",

    "start:prod": "npm run start:front & npm run start:auth-prod",
    "start:dev": "npm run start:front & npm run start:auth-dev",

    "install:front": "cd front-app && npm install",
    "install:auth": "cd auth-service && npm install",

    "install:all": "npm run install:front & npm run install:auth"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "eslint": "^9.10.0",
    "eslint-plugin-react": "^7.36.1",
    "globals": "^15.9.0",
    "typescript-eslint": "^8.6.0"
  }
}
